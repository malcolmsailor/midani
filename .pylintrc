[MASTER]

ignore=midani_tests.py,
    note_classes.py,
    mal_misc.py,
    midi_funcs.py,
    tuning.py,

# It appears that if ignore-patterns has a trailing comma,
#   pytest will not run pylint
ignore-patterns=sample_settings,
    multiple_settings

[MESSAGES CONTROL]

disable=too-many-instance-attributes,
    too-many-locals,
    too-many-branches,
    too-many-statements,
    too-few-public-methods,
    too-many-arguments,
    missing-function-docstring,
    duplicate-code,
    too-many-lines,
    fixme,
    eval-used,



[BASIC]
good-names=
    x,
    y,
    i,
    n
good-names-rgxs=x\d+,
    y\d+
